<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Action Height="1.3" ID="TakeOff"/>
            <RetryUntilSuccessful num_attempts="-1">
                <WhileDoElse>
                    <Inverter>
                        <Condition ID="isFrontierListEmpty"/>
                    </Inverter>
                    <Sequence>
                        <Action ID="SetNextTargetGreedy"/>
                        <Action ID="GoTo" target="target"/>
                        <AlwaysFailure/>
                    </Sequence>
                    <Action ID="Land"/>
                </WhileDoElse>
            </RetryUntilSuccessful>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="GoTo">
            <input_port name="target" type="std::string"/>
        </Action>
        <Action ID="Land"/>
        <Action ID="SetLocation">
            <input_port name="Name"/>
            <input_port name="Pos"/>
        </Action>
        <Action ID="SetNextTargetGreedy"/>
        <Action ID="TakeOff">
            <input_port name="Height"/>
        </Action>
        <Condition ID="isFrontierListEmpty"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

