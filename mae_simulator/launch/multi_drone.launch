<launch>
  <!-- GAZEBO arguments -->
  <arg name="world_name" default="maze1"/>
  <arg name="debug" default="false"/>
  <arg name="gui" default="false"/> <!-- Gazebo CLIENT -->
  <arg name="verbose" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="paused" default="false"/>
  
  <!-- UAV arguments -->
  <arg name="enable_logging" default="false" />
  <arg name="enable_ground_truth" default="true" />
  <arg name="lidar_gpu" default="true"/>
  <arg name="enable_rviz" default="false"/>
  <arg name = "enable_bt" default="false"/>  <!-- BT = Behavior Tree controller -->
  <arg name= "tree_file" default="test_tree.xml"/>
  

 

  <!-- GAZEBO  -->
  <env name="GAZEBO_MODEL_PATH" value="${GAZEBO_MODEL_PATH}:$(find rotors_gazebo)/models:$(find mae_simulator)/worlds/models"/>
  <env name="GAZEBO_RESOURCE_PATH" value="${GAZEBO_RESOURCE_PATH}:$(find rotors_gazebo)/models"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find mae_simulator)/worlds/$(arg world_name).world" />
    <arg name="debug" value="$(arg debug)" />
    <arg name="paused" value="$(arg paused)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="verbose" value="$(arg verbose)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>

  
  </include>

  

  <!-- SPAWN A UAV -->
  <include file="$(find mae_simulator)/launch/helpers/single_drone_spawn.launch">

    <!-- UAV name -->
    <arg name="namespace" value="drone1"/>

    <!--spawn location -->
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0"/>
    
    <!-- RVIZ for this UAV -->
    <arg name="enable_rviz" value="$(arg enable_rviz)"/>

    <!-- Ground truth odometry -->
    <arg name="enable_ground_truth" default="$(arg enable_ground_truth)"/>
    <arg name="enable_logging" value="$(arg enable_logging)"/>
    <arg name="lidar_gpu" value="$(arg lidar_gpu)"/>
    <arg name = "enable_bt" value = "$(arg enable_bt)"/> <!-- BT controller -->
    <arg name= "tree_file" value="test_tree.xml"/>
  </include> 
<!-- SPAWN A UAV -->

  <!-- SPAWN A UAV -->
  <include file="$(find mae_simulator)/launch/helpers/single_drone_spawn.launch">

    <!-- UAV name -->
    <arg name="namespace" value="drone3"/>

    <!--spawn location -->
    <arg name="x" default="-5"/>
    <arg name="y" default="3"/>
    <arg name="z" default="0"/>
    
    <!-- RVIZ for this UAV -->
    <arg name="enable_rviz" value="$(arg enable_rviz)"/>

    <!-- Ground truth odometry -->
    <arg name="enable_ground_truth" default="$(arg enable_ground_truth)"/>
    <arg name="enable_logging" value="$(arg enable_logging)"/>
    <arg name="lidar_gpu" value="$(arg lidar_gpu)"/>
    <arg name = "enable_bt" value = "$(arg enable_bt)"/> <!-- BT controller -->
    <arg name= "tree_file" value="test_tree.xml"/>
  </include> 


  
  
  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
        
        <param name="resolution" value="0.18" />
        <param name="latch" value="false" />
        <param name="frame_id" type="string" value="world" />
        <param name="sensor_model/max_range" value="500" />
        <!-- <param name="occupancy_min_z" value="0.15"/>
        <param name="occupancy_max_z" value="1.5"/> -->

        <param name="pointcloud_min_z" value="0.15"/>
        <param name="pointcloud_max_z" value="2"/>
        
        <remap from="cloud_in" to="/combined_pcl" />
    
    </node>
   

    <!-- Frontier Generation package -->
    <node pkg="mae_frontier_generation" type="frontier_generation_node" name="frontier_generation_node" output="screen">
      <remap from="/map_in" to="/projected_map"/>
      <remap from="/frontiers_out" to="/frontiers"/>
      <remap from="/frontiers_viz_out" to="/frontiers_viz"/>
      <remap from= "/blacklist_pt_in" to="/blacklist_pt"/>
      <remap from= "/exploration_area_out" to="/exploration_area"/>
    </node>  
  <node name="global_map_sharing" pkg="mae_utils" type="global_map_sharing_node.py" output="screen"/>
  <node pkg="rviz" type="rviz" name="global_rviz" respawn="false" output="screen" args="-d $(find mae_simulator)/rviz/global.rviz"/>
</launch>
